{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "rootDir": ".",
    "noImplicitAny": true,
    "target": "ESNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
